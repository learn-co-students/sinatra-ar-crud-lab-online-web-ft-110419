<h1>Edit <%= @article.title %></h1>

<form action="/articles/<%= @article.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <p><label>Title</label><input type="text" name="article[title]" id="title" value="<%= @article.title %>"></p>
  <p><label>Content</label><input type="text" name="article[content]" id="content" value="<%= @article.content %>"></p>
  <input type="submit" value="Edit Article" id="submit">
</form>

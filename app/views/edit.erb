<form action="/articles/<%= @article.id %>"method="POST">
<input id="hidden" type="hidden" name="_method" value="PATCH">
<h2>Title: <input id="title" type="text" name="article[title]" value="<%=@article.title%>"></h2><br>
<h2>Content: <input id="content" type="text" name="article[content]" value="<%=@article.content%>"></h2><br>
<input type="submit" value="Submit">
</form>

